---
import "../styles/global.css";
import Topbar from "../components/Topbar.astro";

interface Props {
  title?: string;
  currentPath?: string;
  fullWidth?: boolean;
}

const { title = "10x Phrase Follower", currentPath, fullWidth = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-background text-foreground overflow-x-hidden">
    <div class="min-h-screen bg-background dark w-full">
      <Topbar currentPath={currentPath} />
      <main class={fullWidth ? "w-full px-0 md:px-4 py-6" : "container mx-auto px-4 py-6"}>
        <slot />
      </main>
    </div>
    <div id="toast-root"></div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
